<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AP Mojocoya"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btn_registrar_usuario"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Registrar Nuevo Socio"
        android:textSize="16sp"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_ver_usuarios"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Ver Lista de Socios"
        android:textSize="16sp"
        android:backgroundTint="#673AB7"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_tomar_lecturas"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="TOMAR LECTURAS"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#009688"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_exportar_padron"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Exportar Reporte Excel"
        android:textSize="16sp"
        android:backgroundTint="#4CAF50"
        android:drawableLeft="@android:drawable/ic_menu_save" />
    <Button
        android:id="@+id/btn_guardar_tarifa"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Guardar ConfiguraciÃ³n Tarifa"
        android:textSize="16sp"
        android:backgroundTint="#4CAF50"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/btn_gastos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Control de Gastos"
        android:textSize="16sp"
        android:backgroundTint="#F44336"
        android:drawableLeft="@android:drawable/ic_menu_manage"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/btn_cobranza"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Caja / Cobranza"
        android:textSize="16sp"
        android:backgroundTint="#388E3C"
        android:drawableLeft="@android:drawable/ic_menu_agenda"
        android:layout_marginTop="16dp" />


</LinearLayout>