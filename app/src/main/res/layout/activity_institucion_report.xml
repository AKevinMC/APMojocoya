<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activities.InstitucionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_title_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reporte Institucional Anual"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_label_anio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Seleccione Gestión (Año):"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_report" />

        <Spinner
            android:id="@+id/sp_anio_institucion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_anio" />

        <TextView
            android:id="@+id/tv_sec_alcalde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Datos H. Alcalde (Destinatario):"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sp_anio_institucion" />

        <EditText
            android:id="@+id/et_alcalde_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre Completo Alcalde"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sec_alcalde" />

        <TextView
            android:id="@+id/tv_sec_comite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Firmas Comité de Agua:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_alcalde_nombre" />

        <EditText
            android:id="@+id/et_presi_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre Presidente/a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sec_comite" />

        <EditText
            android:id="@+id/et_presi_ci"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="C.I. Presidente/a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_presi_nombre" />

        <EditText
            android:id="@+id/et_tesorero_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre Tesorero/a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_presi_ci" />

        <EditText
            android:id="@+id/et_tesorero_ci"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="C.I. Tesorero/a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_tesorero_nombre" />

        <Button
            android:id="@+id/btn_generar_carta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="GENERAR CARTA EXCEL"
            android:backgroundTint="#008000"
            app:layout_constraintTop_toBottomOf="@+id/et_tesorero_ci" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Estado: Esperando..."
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_generar_carta" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>